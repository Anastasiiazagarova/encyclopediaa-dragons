      background-position: center;
      cursor: pointer;
    }
    #dragon-info {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(0,0,0,0.8);
      color: #fff;
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 30;
    }
    #dragon-info .content {
      background: #222;
      padding: 20px;
      border-radius: 10px;
      max-width: 600px;
      text-align: center;
      position: relative;
    }
    #dragon-info .close-btn {
      position: absolute;
      top: -15px;
      right: -15px;
      background: #fff;
      color: #000;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 50%;
      z-index: 5;
    }
    .flying-dragon {
      position: absolute;
      width: 120px;
      height: auto;
      pointer-events: none;
      z-index: 5;
      animation: flyDragon 20s linear infinite alternate;
    }
    @keyframes flyDragon {
      0% { transform: translate(0, 0); }
      25% { transform: translate(60vw, 10vh); }
      50% { transform: translate(40vw, 60vh); }
      75% { transform: translate(80vw, 30vh); }
      100% { transform: translate(0, 0); }
    }
  </style>
